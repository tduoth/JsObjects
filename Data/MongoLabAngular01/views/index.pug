extends layout

block content
  h1= title
  p Welcome to #{title}

  div(ng-controller='MyController')
      p
          | This project retrieves a small amount of JSON from
          | a node server and some data from the MongoLab cloud
          | based Mongo Database.
      button(ng-click='loadAll()') Load Data
      p Rows in DB: {{presidentsLength}}
      ul
          li(ng-repeat='president in presidents')
              p {{president.getPresidentName()}} TermStart {{president.getTermStart()}}
      div(ng-bind-html-unsafe='hint')
      p Here is the JSON retreived from the server:
      p {{data}}