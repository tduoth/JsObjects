mixin elfFormPanel(title)

    form&attributes(attributes)
        div.panel.panel-default
            div.panel-heading= title
            div.panel-body
                block

mixin elfPanel(headingText)
    div.panel.panel-default&attributes(attributes)
        div.panel-heading= headingText
        div.panel-body
            block

mixin elfPanelType(headingText, panelType)
    - if (typeof panelType === 'undefined') {
    -       panelType="panel-default";
    - }
    div.panel(class= panelType)&attributes(attributes)
        div.panel-heading= headingText
        div.panel-body
            block

    // **********
    // Radio Buttons
    // **********

mixin elfRadioPanel(headingText)
    div.panel.panel-default
        div.panel-heading= headingText
        div.panel-body
            div(role="group", id="btn-group.elves")
                block

mixin elfRadio(labelText, valueId)
    .radio
        label(for=valueId)
            input(type='radio', name='radio', value=valueId, id=valueId)
            strong #{labelText}

    // **********
    // CheckBoxes
    // **********

mixin elfCheckBox(labelText, name, value)
    div
        input(type='checkbox', id=name, name=name, value=value)&attributes(attributes)
        label.chkbox(for=name) &nbsp; #{labelText}


    // **************
    // Input Controls
    // **************

mixin elfInput(labelText, name, placeHolder)
    div
        label(for='subject') #{labelText}
        input(type='text', name=name, placeholder=placeHolder)&attributes(attributes)
